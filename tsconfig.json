{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/auth": ["auth"],
      "@/models": ["src/app/lib/models"],
      "@/blogModel": ["src/app/lib/blogModel"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/(auth)/login/page.jsx",
    "auth.config.js",
    "auth.config.js'"
  ],
  "exclude": ["node_modules"]
}
